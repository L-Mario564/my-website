---
import '../main.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="font-lato bg-woodsmoke-950 text-white">
    <nav class="flex gap-1 items-center bg-woodsmoke-950 z-50 w-screen py-2 px-4 fixed left-0 top-0 border-b border-white/25">
      <div class="grid grid-cols-[33.333%_33.336%_33.333%] absolute w-screen h-[1px] left-0 bottom-0">
        <div class="w-full h-full bg-gradient-to-r from-transparent to-orange-500/50"/>
        <div class="w-full h-full bg-gradient-to-r from-orange-500/50 to-purple-500/50"/>
        <div class="w-full h-full bg-gradient-to-r from-purple-500/50 to-transparent"/>
      </div>
      <a href="/">
        <img src="/public/logo.png" alt="logo" width="24" height="24" class="mr-3">
      </a>
      <a href="/" class="btn text-white hover:bg-white/25">
        Home
      </a>
      <a href="/projects" class="btn text-white hover:bg-white/25">
        Projects
      </a>
      <a href="/osu" class="btn text-white hover:bg-white/25">
        osu!
      </a>
    </nav>
    <main class="mt-[calc(4rem+56px)] mb-16">
      <slot />
    </main>
  </body>
</html>
